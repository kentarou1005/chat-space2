.message{data: {id: "message.id"}}
  .upper-message
    .upper-message__user-name{ data: { user_name: "user-name"}}
      = message.user.name
    .upper-message__date{ data: { created_at: "created_at"}}
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if message.content.present?
      %p.lower-message__content{ data: { message_content: "message_content", message_image: "message_image"}}
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?